{
  "name": "ezPAARSE Logger (Extension)",
  "version": "2.2.1",
  "description": "Capture the web traffic and send it to the logger application",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/ezlogger-16.png",
      "48": "img/ezlogger-48.png",
      "128": "img/ezlogger-128.png"
    }
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://analogist.couperin.org/ezlogger/*",
        "*://analyses.ezpaarse.org/ezlogger/*",
        "*://analyses-preprod.ezpaarse.org/ezlogger/*",
        "*://ang.couperin.org/ezlogger/*",
        "*://ang-preprod.couperin.org/ezlogger/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "img/ezlogger-16.png",
    "48": "img/ezlogger-48.png",
    "128": "img/ezlogger-128.png"
  }
}
